<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/HRFormTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#007fdb"
                android:fontFamily="@font/poppins_semibold"
                android:padding="10sp"
                android:text="@string/hr_forms"
                android:textAlignment="textStart"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/HRExit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="-50dp"
                android:background="#007fdb"
                android:importantForAccessibility="no"
                android:padding="5dp"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"
                tools:ignore="ImageContrastCheck,TouchTargetSizeCheck" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="0dp"
                android:orientation="vertical"
                android:padding="20dp">

                <Button
                    android:id="@+id/newLeave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="@string/new_leave_application_form"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:strokeColor="#007fdb"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/COCEarned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="@string/certificate_of_coc_earned"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:strokeColor="#007fdb"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/SALNForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="@string/saln_form"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:strokeColor="#007fdb"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/PDSForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="@string/pds_form"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:strokeColor="#007fdb"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/newlyHire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="@string/checklist_of_requirements_newly_hire"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:strokeColor="#007fdb"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/Promotion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:fontFamily="@font/poppins_semibold"
                    android:padding="10dp"
                    android:text="@string/checklist_of_requirements_promotion"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:strokeColor="#007fdb"
                    app:strokeWidth="2dp" />

                <Button
                    android:id="@+id/HRClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:backgroundTint="#007FDB"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/close"
                    android:textAllCaps="false"
                    android:textColor="#FFFFFF" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>